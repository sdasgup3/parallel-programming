#!/bin/bash
#PBS -l walltime=00:30:00
#PBS -l nodes=1:ppn=1
#PBS -N mp3
#PBS -j oe

# Move to your mp0 directory
cd /home/"netid"/MP3

module load mpi

for gsize in 1200000 12000000 120000000
do

	echo "Running with n=${gsize} p=1" >> out_mp3_serial.txt

	# Run MP3
	mpirun -n 1 ./sampleSort $gsize >> out_mp3_serial.txt

done

